{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch VCV Rack (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../Rack",
            "args": ["-d"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../../",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }   
            ],
            "preLaunchTask": "Build plugin",
        },
        {
            "name": "(gdb) Launch VCV Rack (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/../../Rack",
            "args": ["-d"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/../../",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }   
            ],
            "preLaunchTask": "Build plugin",
        }
    ]
}